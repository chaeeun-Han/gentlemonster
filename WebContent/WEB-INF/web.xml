<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>a</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>DispatcherServlet</servlet-name>
  	<servlet-class>com.gentlemonster.web.DispatcherServlet</servlet-class>
  		<init-param>
  			<param-name>basePackage</param-name>
  			<param-value>com.gentlemonster.web.handler</param-value>
  		</init-param>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DispatcherServlet</servlet-name>
  	<url-pattern>/shop/*</url-pattern>
  	<url-pattern>/styles/*</url-pattern>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CartFilter</filter-name>
    <filter-class>com.gentlemonster.web.filter.CartFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CartFilter</filter-name>
    <url-pattern>/*</url-pattern> <!-- 모든 요청에 필터 적용 -->
  </filter-mapping>
  
</web-app>